{
  "manifest_version": 3,
  "name": "Google Calendar Prefix Buttons",
  "short_name": "GCal Prefix",
  "description": "Add configurable prefix buttons to Google Calendar event titles.",
  "version": "1.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/calendar/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
